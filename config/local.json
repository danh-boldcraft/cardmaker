{
  "environment": "local",
  "stackName": "CardmakerStack-Local",
  "description": "Local development environment - runs on localhost",
  "backend": {
    "port": 3001,
    "host": "localhost"
  },
  "frontend": {
    "port": 8080,
    "host": "localhost"
  },
  "lambda": {
    "memorySize": 128,
    "timeout": 10,
    "reservedConcurrency": null
  },
  "apiGateway": {
    "throttling": {
      "rateLimit": 100,
      "burstLimit": 200
    },
    "methodThrottling": {
      "rateLimit": 10,
      "burstLimit": 20
    }
  },
  "cloudfront": {
    "priceClass": "PriceClass_100",
    "comment": "Local environment - Cardmaker Service"
  },
  "features": {
    "debugMode": true,
    "verboseLogging": true
  },
  "secrets": {
    "note": "No real secrets needed for local development"
  }
}
