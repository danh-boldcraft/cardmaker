{
  "name": "cardmaker",
  "version": "1.0.0",
  "description": "Art creation platform with AI image generation APIs",
  "main": "index.js",
  "scripts": {
    "cdk": "cdk",
    "bootstrap": "cdk bootstrap",
    "deploy": "cdk deploy",
    "deploy:test": "cross-env DEPLOY_ENV=test cdk deploy --require-approval never",
    "deploy:prod": "cross-env DEPLOY_ENV=prod cdk deploy --require-approval never",
    "destroy": "cdk destroy",
    "destroy:test": "cross-env DEPLOY_ENV=test cdk destroy",
    "destroy:prod": "cross-env DEPLOY_ENV=prod cdk destroy",
    "synth": "cdk synth",
    "test": "node tests/lambda-handler.js",
    "test:watch": "nodemon --watch src tests/lambda-handler.js",
    "test:infrastructure": "node tests/infrastructure-deployment.js",
    "test:frontend": "playwright test",
    "test:frontend:headed": "playwright test --headed",
    "test:frontend:slow": "cross-env SLOW_MO=1000 playwright test --headed",
    "test:frontend:ui": "playwright test --ui",
    "test:frontend:report": "playwright show-report",
    "dev": "live-server public --port=8080 --no-browser",
    "dev:open": "live-server public --port=8080",
    "backend": "node local-server.js",
    "debug": "node --inspect-brk local-server.js",
    "local": "concurrently \"npm run backend\" \"npm run dev:open\""
  },
  "keywords": [
    "lambda",
    "api",
    "aws"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0"
  },
  "devDependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.955.0",
    "@aws-sdk/client-dynamodb": "^3.955.0",
    "@aws-sdk/client-s3": "^3.955.0",
    "@aws-sdk/lib-dynamodb": "^3.955.0",
    "@aws-sdk/s3-request-presigner": "^3.955.0",
    "@playwright/test": "^1.56.1",
    "aws-cdk": "^2.120.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2"
  }
}
